<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutReports"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/showUserProfile"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_pets_black_24dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_userChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_report"
                android:padding="8dp"
                android:text="@string/userEmailReport"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/show_lastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fui_transparent"
                android:padding="8dp"
                android:text="@string/userEmailReport"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>